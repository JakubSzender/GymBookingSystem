
<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage" Class="mud-theme-primary  flex-row-reverse py-2 px-1">Hello, @context.User.Identity.Name!</MudLink>
        <MudLink Href="Identity/Account/LogOut" Class="mud-theme-primary  flex-row-reverse py-2 px-1">Log out</MudLink>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Register" Class="mud-theme-primary  flex-row-reverse py-2 px-1">Register</MudLink>
        <MudLink Href="Identity/Account/Login" Class="mud-theme-primary  flex-row-reverse py-2 px-1">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>
    