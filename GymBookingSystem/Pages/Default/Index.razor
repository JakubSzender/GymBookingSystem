@page "/"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
    <AuthorizeView>
        <Authorized>
            <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Welcome </MudText>
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true"> @authState.User.Identity.Name</MudText>
            <MudText Class="mb-8" Align="Align.Center">In this app you can reservate gymmachine for selected hour</MudText>
        </Authorized>
    
        <NotAuthorized>
            <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Welcome </MudText>
            <MudText Class="mb-8" Align="Align.Center">In this app you can reserve gymmachine for selected hour</MudText>
            <MudText Class="mb-8" Align="Align.Center">If you don't see any options in menu try to log in or register </MudText>
       </NotAuthorized>
    </AuthorizeView>
</MudContainer>





@code{
    [CascadingParameter]
    private Task<AuthenticationState> _authState { get; set; }

    private AuthenticationState authState;

    protected override async Task OnInitializedAsync()
    {
        authState = await _authState;
    }
}